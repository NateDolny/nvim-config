syntax enable 
colorscheme paramount
set colorcolumn=80
set incsearch
highlight CursorLineNr ctermfg=red
highlight LineNr cterm=bold ctermfg=darkgrey

set expandtab
set tabstop=4 
set shiftwidth=4 

set number
set showmatch
set norelativenumber
set cursorline
set spelllang=en_us

set backup
set writebackup
set backupdir=~/.nvim_backups
